/* custom-tab-bar/index.wxss */

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  height: auto;
}

.tab-bar-container {
  background: rgba(249, 249, 249, 0.98);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.08);
  position: relative;
  padding-bottom: env(safe-area-inset-bottom);
  height: auto;
}

.tab-bar-inner {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 8rpx 0 12rpx;
  position: relative;
  height: 100rpx;
  box-sizing: border-box;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 8rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.tab-item-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.tab-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}

.tab-icon {
  font-size: 44rpx;
  transition: all 0.2s ease;
  color: #969799;
  line-height: 1;
}

.tab-icon-active {
  color: #ff6ba6;
}

.tab-text {
  font-size: 20rpx;
  color: #969799;
  font-weight: 400;
  transition: all 0.2s ease;
  line-height: 1.2;
}

.tab-text-active {
  color: #ff6ba6;
  font-weight: 500;
}

/* 点击效果 */
.tab-bar-item:active {
  opacity: 0.7;
}

/* 响应式优化 */
@media screen and (max-width: 320px) {
  .tab-icon {
    font-size: 40rpx;
  }

  .tab-text {
    font-size: 18rpx;
  }

  .tab-bar-inner {
    padding: 6rpx 0 10rpx;
  }
}