/* 全局样式变量 - 生日主题配色 */

/*
  🎨 生日守护星 - 统一配色方案
  基于五色彩虹渐变的温馨生日主题
*/

/* ===== 主要配色变量 ===== */
:root {
  /* 五色渐变核心色 */
  --primary-pink: #ff6ba6;      /* 生日粉 - 主色调 */
  --primary-orange: #fdba74;    /* 温暖橙 */
  --primary-green: #9ae6b4;     /* 清新绿 */
  --primary-blue: #63b3ed;      /* 天空蓝 */
  --primary-purple: #d946ef;    /* 梦幻紫 */

  /* 文字颜色 */
  --text-primary: #1f2937;
  --text-secondary: #374151;
  --text-tertiary: #6b7280;
  --text-light: #9ca3af;

  /* 背景颜色 */
  --bg-white: rgba(255, 255, 255, 0.8);
  --bg-white-blur: rgba(255, 255, 255, 0.6);
}

/* ===== 渐变背景样式 ===== */

/* 五色主渐变 - 用于头部背景 */
.gradient-primary {
  background: linear-gradient(145deg,
    var(--primary-pink) 0%,
    var(--primary-orange) 25%,
    var(--primary-green) 50%,
    var(--primary-blue) 75%,
    var(--primary-purple) 100%);
}

/* 五色浅渐变 - 用于页面背景 */
.gradient-bg {
  background: linear-gradient(180deg,
    rgba(255, 106, 166, 0.05) 0%,
    rgba(253, 186, 116, 0.04) 25%,
    rgba(154, 230, 180, 0.03) 50%,
    rgba(99, 179, 237, 0.04) 75%,
    rgba(217, 70, 239, 0.05) 100%);
}

/* 卡片渐变背景 */
.gradient-card {
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.08) 0%,
    rgba(253, 186, 116, 0.06) 25%,
    rgba(154, 230, 180, 0.05) 50%,
    rgba(99, 179, 237, 0.06) 75%,
    rgba(217, 70, 239, 0.08) 100%);
}

/* 卡片活跃状态渐变 */
.gradient-card-active {
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.12) 0%,
    rgba(253, 186, 116, 0.1) 25%,
    rgba(154, 230, 180, 0.08) 50%,
    rgba(99, 179, 237, 0.1) 75%,
    rgba(217, 70, 239, 0.12) 100%);
}

/* 按钮渐变背景 */
.gradient-button {
  background: linear-gradient(135deg,
    var(--primary-pink) 0%,
    var(--primary-orange) 50%,
    var(--primary-blue) 100%);
}

/* ===== 阴影效果 ===== */

/* 多彩阴影 - 主要元素 */
.shadow-colorful {
  box-shadow:
    0 8rpx 28rpx rgba(255, 106, 166, 0.08),
    0 4rpx 14rpx rgba(253, 186, 116, 0.06),
    0 2rpx 0 rgba(255, 255, 255, 0.8) inset;
}

/* 多彩阴影 - 按钮 */
.shadow-colorful-button {
  box-shadow:
    0 8rpx 24rpx rgba(255, 106, 166, 0.15),
    0 4rpx 12rpx rgba(253, 186, 116, 0.1),
    0 2rpx 0 rgba(255, 255, 255, 0.8) inset;
}

/* 多彩阴影 - 悬停状态 */
.shadow-colorful-hover {
  box-shadow:
    0 10rpx 32rpx rgba(255, 106, 166, 0.15),
    0 6rpx 16rpx rgba(253, 186, 116, 0.1),
    0 2rpx 0 rgba(255, 255, 255, 0.9) inset;
}

/* ===== 边框样式 ===== */

/* 半透明白色边框 */
.border-glass {
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

/* 半透明彩色边框 */
.border-colorful {
  border: 1rpx solid rgba(255, 106, 166, 0.4);
}

/* ===== 模糊效果 ===== */

/* 玻璃态模糊 */
.blur-glass {
  backdrop-filter: blur(25rpx);
  -webkit-backdrop-filter: blur(25rpx);
}

/* 轻度模糊 */
.blur-light {
  backdrop-filter: blur(15rpx);
  -webkit-backdrop-filter: blur(15rpx);
}

/* ===== 通用组件样式 ===== */

/* 卡片基础样式 */
.card-colorful {
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.06) 0%,
    rgba(253, 186, 116, 0.05) 25%,
    rgba(154, 230, 180, 0.04) 50%,
    rgba(99, 179, 237, 0.05) 75%,
    rgba(217, 70, 239, 0.06) 100%);
  backdrop-filter: blur(25rpx);
  -webkit-backdrop-filter: blur(25rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  box-shadow:
    0 8rpx 28rpx rgba(255, 106, 166, 0.08),
    0 4rpx 14rpx rgba(253, 186, 116, 0.06),
    0 2rpx 0 rgba(255, 255, 255, 0.8) inset;
}

/* 标签样式 */
.tag-colorful {
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.12) 0%,
    rgba(253, 186, 116, 0.1) 100%);
  color: var(--primary-pink);
  border: 1rpx solid rgba(255, 106, 166, 0.25);
  box-shadow: 0 2rpx 4rpx rgba(255, 106, 166, 0.08);
}

/* 头像样式 */
.avatar-colorful {
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.12) 0%,
    rgba(253, 186, 116, 0.1) 50%,
    rgba(99, 179, 237, 0.12) 100%);
  backdrop-filter: blur(15rpx);
  -webkit-backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.7);
  box-shadow:
    0 4rpx 12rpx rgba(255, 106, 166, 0.12),
    0 2rpx 6rpx rgba(253, 186, 116, 0.08),
    0 1rpx 0 rgba(255, 255, 255, 0.8) inset;
}

/* ===== 动画效果 ===== */

/* 彩色文字阴影动画 */
@keyframes colorfulTextGlow {
  0%, 100% {
    text-shadow: 0 2rpx 4rpx rgba(255, 106, 166, 0.2);
  }
  50% {
    text-shadow: 0 3rpx 6rpx rgba(255, 106, 166, 0.3);
  }
}

/* 多彩脉冲动画 */
@keyframes colorfulPulse {
  0%, 100% {
    box-shadow:
      0 8rpx 24rpx rgba(255, 106, 166, 0.15),
      0 4rpx 12rpx rgba(253, 186, 116, 0.1),
      0 2rpx 0 rgba(255, 255, 255, 0.8) inset;
  }
  50% {
    box-shadow:
      0 12rpx 32rpx rgba(255, 106, 166, 0.25),
      0 6rpx 16rpx rgba(253, 186, 116, 0.15),
      0 2rpx 0 rgba(255, 255, 255, 0.9) inset;
  }
}

/* ===== 工具类 ===== */

/* 彩色数字样式 */
.number-colorful {
  color: var(--primary-pink);
  text-shadow: 0 2rpx 4rpx rgba(255, 106, 166, 0.2);
}

/* 彩色图标样式 */
.icon-colorful {
  color: var(--primary-pink);
  animation: colorfulTextGlow 3s ease-in-out infinite;
}

/* 过渡效果 */
.transition-colorful {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 悬停效果 */
.hover-colorful:active {
  transform: translateY(2rpx) scale(0.99);
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.1) 0%,
    rgba(253, 186, 116, 0.08) 25%,
    rgba(154, 230, 180, 0.07) 50%,
    rgba(99, 179, 237, 0.08) 75%,
    rgba(217, 70, 239, 0.1) 100%);
  box-shadow:
    0 6rpx 20rpx rgba(255, 106, 166, 0.1),
    0 3rpx 10rpx rgba(253, 186, 116, 0.08),
    0 2rpx 0 rgba(255, 255, 255, 0.9) inset;
}