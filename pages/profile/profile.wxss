/* pages/profile/profile.wxss */

/* 个人信息头部 */
.profile-header {
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa726 60%, #ff8a95 100%);
  padding: 80rpx 40rpx 60rpx;
  position: relative;
  overflow: hidden;
}

.profile-header::before {
  content: '';
  position: absolute;
  top: -30%;
  right: -15%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite;
}

.profile-header::after {
  content: '';
  position: absolute;
  bottom: -20%;
  left: -10%;
  width: 150rpx;
  height: 150rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10rpx); }
}

.profile-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 10;
}

.avatar-section {
  margin-right: 30rpx;
}

.avatar-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.avatar-wrapper:active {
  transform: scale(0.95);
}

.avatar-emoji {
  font-size: 60rpx;
  line-height: 1;
}

.avatar-edit-icon {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #ff6b9d;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  flex: 1;
  color: white;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.nickname:active {
  opacity: 0.8;
}

.edit-icon {
  margin-left: 12rpx;
  font-size: 24rpx;
  opacity: 0.7;
}

.user-desc {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 设置区域 */
.content-wrapper {
  padding: 30rpx;
  background: linear-gradient(135deg, #ffeef8 0%, #fff5f1 50%, #f8f0ff 100%);
  min-height: calc(100vh - 300rpx);
}

.settings-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

.setting-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.setting-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 157, 0.15);
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.item-label {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-value {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-right: 8rpx;
}

.arrow {
  font-size: 32rpx;
  color: #bdc3c7;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
}

.avatar-modal, .nickname-modal, .theme-modal {
  background: white;
  border-radius: 20rpx;
  margin: 40rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  text-align: center;
  padding: 40rpx 40rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 头像选择 */
.avatar-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
  gap: 20rpx;
  justify-content: center;
  max-width: 500rpx;
}

.avatar-option {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background: #f8f9fa;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.avatar-option.selected {
  border-color: #ff6b9d;
  background: rgba(255, 107, 157, 0.1);
  transform: scale(1.1);
}

.avatar-option:active {
  transform: scale(0.95);
}

/* 昵称编辑 */
.nickname-modal {
  width: calc(100vw - 80rpx);
  max-width: 500rpx;
}

.nickname-input {
  margin: 30rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background: #f8f9fa;
}

.nickname-input:focus {
  border-color: #ff6b9d;
  background: white;
}

.modal-actions {
  display: flex;
  border-top: 2rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 32rpx;
  font-size: 30rpx;
  border: none;
  background: white;
  border-radius: 0;
}

.modal-btn.cancel {
  color: #7f8c8d;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #ff6b9d;
  font-weight: 600;
}

.modal-btn:active {
  background: #f8f9fa;
}

/* 主题选择 */
.theme-modal {
  width: calc(100vw - 60rpx);
  max-width: 600rpx;
}

.theme-list {
  padding: 30rpx;
  max-height: 50vh;
  overflow-y: scroll;
}

.theme-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.theme-item.selected {
  border-color: #ff6b9d;
  background: rgba(255, 107, 157, 0.05);
}

.theme-item:active {
  transform: scale(0.98);
}

.theme-preview {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.theme-info {
  flex: 1;
}

.theme-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 4rpx;
}

.theme-desc {
  font-size: 24rpx;
  color: #7f8c8d;
}

.theme-check {
  font-size: 32rpx;
  color: #ff6b9d;
  font-weight: bold;
}

/* 响应式优化 */
@media screen and (max-width: 320px) {
  .profile-header {
    padding: 60rpx 30rpx 40rpx;
  }
  
  .profile-card {
    padding: 30rpx;
  }
  
  .avatar-wrapper {
    width: 100rpx;
    height: 100rpx;
  }
  
  .avatar-emoji {
    font-size: 50rpx;
  }
  
  .nickname {
    font-size: 32rpx;
  }
  
  .content-wrapper {
    padding: 20rpx;
  }
}