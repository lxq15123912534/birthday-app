/* pages/profile/profile.wxss */

/* 个人信息头部 - 多彩渐变设计 */
.profile-header {
  background: linear-gradient(145deg,
    #ff6ba6 0%,
    #fdba74 25%,
    #9ae6b4 50%,
    #63b3ed 75%,
    #d946ef 100%);
  padding: 100rpx 40rpx 80rpx;
  position: relative;
  overflow: hidden;
}

.profile-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

.profile-header::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.03) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: breathe 4s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.8;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.4;
  }
}

.profile-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 1rpx 0 rgba(255, 255, 255, 0.2) inset;
  position: relative;
  z-index: 10;
}

.avatar-section {
  margin-right: 24rpx;
}

.avatar-wrapper {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.avatar-wrapper:active {
  transform: scale(0.95);
}

.avatar-emoji {
  font-size: 50rpx;
  line-height: 1;
}

.avatar-edit-icon {
  position: absolute;
  bottom: -6rpx;
  right: -6rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  color: #667eea;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.user-info {
  flex: 1;
  color: white;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

.nickname:active {
  opacity: 0.8;
}

.edit-icon {
  margin-left: 8rpx;
  font-size: 20rpx;
  opacity: 0.7;
}

.user-desc {
  font-size: 22rpx;
  opacity: 0.85;
  line-height: 1.4;
}

/* 设置区域 */
.content-wrapper {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
  margin-top: -40rpx;
  position: relative;
  z-index: 10;
  border-radius: 24rpx 24rpx 0 0;
  min-height: calc(100vh - 300rpx);
}

.settings-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
  padding-left: 6rpx;
  opacity: 0.9;
}

.setting-item {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.06),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.setting-item:active {
  transform: translateY(1rpx);
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 
    0 2rpx 12rpx rgba(0, 0, 0, 0.08),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.item-label {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-value {
  font-size: 22rpx;
  color: #6b7280;
  margin-right: 6rpx;
}

.arrow {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(12rpx);
  -webkit-backdrop-filter: blur(12rpx);
}

.avatar-modal, .nickname-modal, .theme-modal {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  margin: 32rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  text-align: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 头像选择 */
.avatar-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
  gap: 20rpx;
  justify-content: center;
  max-width: 500rpx;
}

.avatar-option {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background: #f8f9fa;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.avatar-option.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  transform: scale(1.1);
}

.avatar-option:active {
  transform: scale(0.95);
}

/* 昵称编辑 */
.nickname-modal {
  width: calc(100vw - 80rpx);
  max-width: 500rpx;
}

.nickname-input {
  margin: 24rpx;
  padding: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.nickname-input:focus {
  border-color: rgba(102, 126, 234, 0.3);
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 2rpx 12rpx rgba(102, 126, 234, 0.15);
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.modal-btn {
  flex: 1;
  padding: 28rpx;
  font-size: 26rpx;
  border: none;
  background: transparent;
  border-radius: 0;
}

.modal-btn.cancel {
  color: #6b7280;
  border-right: 1rpx solid rgba(0, 0, 0, 0.05);
}

.modal-btn.confirm {
  color: #667eea;
  font-weight: 600;
}

.modal-btn:active {
  background: rgba(0, 0, 0, 0.02);
}

/* 主题选择 */
.theme-modal {
  width: calc(100vw - 60rpx);
  max-width: 600rpx;
}

.theme-list {
  padding: 30rpx;
  max-height: 50vh;
  overflow-y: scroll;
}

.theme-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.theme-item.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.theme-item:active {
  transform: scale(0.98);
}

.theme-preview {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.theme-info {
  flex: 1;
}

.theme-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 3rpx;
}

.theme-desc {
  font-size: 20rpx;
  color: #6b7280;
}

.theme-check {
  font-size: 28rpx;
  color: #667eea;
  font-weight: bold;
}

/* 响应式优化 */
@media screen and (max-width: 320px) {
  .profile-header {
    padding: 60rpx 30rpx 40rpx;
  }
  
  .profile-card {
    padding: 30rpx;
  }
  
  .avatar-wrapper {
    width: 100rpx;
    height: 100rpx;
  }
  
  .avatar-emoji {
    font-size: 50rpx;
  }
  
  .nickname {
    font-size: 32rpx;
  }
  
  .content-wrapper {
    padding: 20rpx;
  }
}