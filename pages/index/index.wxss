/* 左侧倒计时区域 */
.countdown-section {
  position: relative;
  flex-shrink: 0;
}

.countdown-circle-compact {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: radial-gradient(circle,
    rgba(255, 255, 255, 0.95) 0%,
    rgba(255, 255, 255, 0.8) 100%);
  border: 2rpx solid rgba(255, 106, 166, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 6rpx 24rpx rgba(255, 106, 166, 0.2),
    0 3rpx 12rpx rgba(253, 186, 116, 0.15),
    0 1rpx 0 rgba(255, 255, 255, 0.9) inset;
  animation: countdownPulseCompact 2s ease-in-out infinite;
  position: relative;
  overflow: hidden;
}

.countdown-circle-compact::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 70%);
  animation: countdownShineCompact 3s ease-in-out infinite;
}

@keyframes countdownShineCompact {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes countdownPulseCompact {
  0%, 100% {
    transform: scale(1);
    border-color: rgba(255, 106, 166, 0.4);
  }
  50% {
    transform: scale(1.03);
    border-color: rgba(255, 106, 166, 0.6);
