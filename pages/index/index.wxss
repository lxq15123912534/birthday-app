/* 主要内容区域 */
.main-content {
  padding: 0 24rpx 160rpx;
  position: relative;
  z-index: 10;
  animation: fadeInUp 0.6s ease-out;
}

/* 白色底座样式 */
.card-base-white {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow:
    0 12rpx 40rpx rgba(0, 0, 0, 0.08),
    0 6rpx 20rpx rgba(0, 0, 0, 0.04),
    0 2rpx 0 rgba(255, 255, 255, 0.9) inset;
  transition: all 0.3s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 即将到来的生日部分 */
.upcoming-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  letter-spacing: 0.5rpx;
}

/* 在白色底座内的标题样式 */
.card-base-white .section-title {
  margin-bottom: 16rpx;
  padding-bottom: 8rpx;
}

/* 特殊生日卡片样式 */
.special-birthday-card {
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.15) 0%,
    rgba(253, 186, 116, 0.12) 25%,
    rgba(154, 230, 180, 0.10) 50%,
    rgba(99, 179, 237, 0.12) 75%,
    rgba(217, 70, 239, 0.15) 100%);
  backdrop-filter: blur(25rpx);
  -webkit-backdrop-filter: blur(25rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  color: #1f2937;
  position: relative;
  overflow: hidden;
  border-radius: 28rpx;
  box-shadow:
    0 16rpx 48rpx rgba(255, 106, 166, 0.15),
    0 8rpx 24rpx rgba(253, 186, 116, 0.1),
    0 4rpx 12rpx rgba(0, 0, 0, 0.06),
    0 1rpx 0 rgba(255, 255, 255, 0.9) inset;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  animation: birthdayCardPulse 3s ease-in-out infinite;
  margin: 0; /* 移除自带边距，由底座提供 */
}

@keyframes birthdayCardPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow:
      0 20rpx 60rpx rgba(255, 106, 166, 0.2),
      0 8rpx 30rpx rgba(253, 186, 116, 0.15),
      0 4rpx 15rpx rgba(0, 0, 0, 0.08),
      0 2rpx 0 rgba(255, 255, 255, 0.8) inset;
  }
  50% {
    transform: scale(1.02);
    box-shadow:
      0 25rpx 70rpx rgba(255, 106, 166, 0.25),
      0 10rpx 35rpx rgba(253, 186, 116, 0.18),
      0 6rpx 20rpx rgba(0, 0, 0, 0.1),
      0 2rpx 0 rgba(255, 255, 255, 0.9) inset;
  }
}

.special-birthday-card:active {
  transform: translateY(3rpx) scale(0.98);
  box-shadow:
    0 15rpx 40rpx rgba(255, 106, 166, 0.15),
    0 6rpx 20rpx rgba(253, 186, 116, 0.12),
    0 2rpx 0 rgba(255, 255, 255, 0.8) inset;
}

/* 庆祝装饰背景 */
.celebration-decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 1;
}

.confetti {
  position: absolute;
  font-size: 20rpx;
  animation: confettiFall 4s ease-in-out infinite;
  opacity: 0.6;
}

.confetti-1 { top: 15%; left: 8%; animation-delay: 0s; }
.confetti-2 { top: 20%; right: 12%; animation-delay: 0.8s; }
.confetti-3 { top: 60%; left: 15%; animation-delay: 1.6s; }
.confetti-4 { bottom: 25%; right: 18%; animation-delay: 2.4s; }
.confetti-5 { bottom: 30%; left: 22%; animation-delay: 3.2s; }
.confetti-6 { top: 40%; right: 25%; animation-delay: 4s; }

@keyframes confettiFall {
  0%, 100% {
    transform: translateY(0) rotate(0deg) scale(1);
    opacity: 0.5;
  }
  50% {
    transform: translateY(-10rpx) rotate(180deg) scale(1.1);
    opacity: 0.8;
  }
}

/* 彩带装饰 */
.ribbon-decoration {
  position: absolute;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg,
    #ff6ba6 0%,
    #fdba74 25%,
    #9ae6b4 50%,
    #63b3ed 75%,
    #d946ef 100%);
  z-index: 1;
  opacity: 0.6;
}

.ribbon-top {
  top: 0;
  border-radius: 32rpx 32rpx 0 0;
  animation: ribbonShimmer 2s ease-in-out infinite;
}

.ribbon-bottom {
  bottom: 0;
  border-radius: 0 0 32rpx 32rpx;
  animation: ribbonShimmer 2s ease-in-out infinite reverse;
}

@keyframes ribbonShimmer {
  0%, 100% {
    opacity: 0.4;
  }
  50% {
    opacity: 0.8;
  }
}

/* 生日皇冠 */
.birthday-crown {
  position: absolute;
  top: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;
  z-index: 10;
  animation: crownFloat 3s ease-in-out infinite;
  filter: drop-shadow(0 3rpx 6rpx rgba(255, 215, 0, 0.3));
}

@keyframes crownFloat {
  0%, 100% {
    transform: translateX(-50%) translateY(0) rotate(-3deg);
  }
  50% {
    transform: translateX(-50%) translateY(-5rpx) rotate(3deg);
  }
}

/* 特殊倒计时样式 */
.special-countdown {
  text-align: center;
  margin: 40rpx 0 30rpx;
  position: relative;
}

.countdown-circle {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  border-radius: 50%;
  background: radial-gradient(circle,
    rgba(255, 255, 255, 0.9) 0%,
    rgba(255, 255, 255, 0.7) 100%);
  border: 3rpx solid rgba(255, 106, 166, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 8rpx 32rpx rgba(255, 106, 166, 0.2),
    0 4rpx 16rpx rgba(253, 186, 116, 0.15),
    0 2rpx 0 rgba(255, 255, 255, 0.9) inset;
  animation: countdownPulse 2s ease-in-out infinite;
  position: relative;
  overflow: hidden;
}

.countdown-circle::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.3) 50%,
    transparent 70%);
  animation: countdownShine 3s ease-in-out infinite;
}

@keyframes countdownShine {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes countdownPulse {
  0%, 100% {
    transform: scale(1);
    border-color: rgba(255, 106, 166, 0.3);
  }
  50% {
    transform: scale(1.05);
    border-color: rgba(255, 106, 166, 0.5);
  }
}

.countdown-number-big {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff6ba6;
  line-height: 1;
  text-shadow:
    0 2rpx 8rpx rgba(255, 107, 166, 0.3),
    0 0 20rpx rgba(255, 107, 166, 0.2);
  z-index: 2;
  position: relative;
}

.countdown-unit-big {
  font-size: 20rpx;
  color: #6b7280;
  margin-top: 6rpx;
  font-weight: 500;
  z-index: 2;
  position: relative;
}

/* 倒计时周围的星光 */
.countdown-sparkles {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  pointer-events: none;
}

.countdown-sparkles .sparkle {
  position: absolute;
  font-size: 20rpx;
  animation: sparkleOrbit 4s linear infinite;
}

.sp-1 {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 0s;
}

.sp-2 {
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  animation-delay: 1s;
}

.sp-3 {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 2s;
}

.sp-4 {
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  animation-delay: 3s;
}

@keyframes sparkleOrbit {
  0% {
    opacity: 0.5;
    transform: translateX(-50%) translateY(-50%) scale(0.8);
  }
  50% {
    opacity: 1;
    transform: translateX(-50%) translateY(-50%) scale(1.2);
  }
  100% {
    opacity: 0.5;
    transform: translateX(-50%) translateY(-50%) scale(0.8);
  }
}

