/* pages/index/index.wxss */

/* 顶部标题区域 - 现代简约设计 */
.header-section {
  padding: 100rpx 40rpx 80rpx;
  text-align: center;
  background: linear-gradient(145deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(118, 75, 162, 0.3);
}

.header-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    linear-gradient(to bottom, rgba(255, 255, 255, 0.05) 0%, transparent 100%);
  pointer-events: none;
  opacity: 0.8;
}

.header-section::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.03) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: breathe 4s ease-in-out infinite;
}

/* 简化头部装饰元素 */
.header-decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  opacity: 0.6;
}

.decoration {
  position: absolute;
  font-size: 28rpx;
  animation: gentle-float 8s ease-in-out infinite;
  filter: blur(0.5rpx);
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.3);
}

.sparkle {
  position: absolute;
  font-size: 20rpx;
  animation: sparkleShine 2s ease-in-out infinite;
}

@keyframes sparkleShine {
  0%, 100% {
    opacity: 0.5;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}

.decoration-1 {
  top: 20%;
  left: 15%;
  animation-delay: 0s;
}

.decoration-2 {
  top: 30%;
  right: 20%;
  animation-delay: 2s;
}

.decoration-3 {
  bottom: 35%;
  left: 25%;
  animation-delay: 4s;
}

.decoration-4 {
  top: 45%;
  right: 30%;
  animation-delay: 6s;
}

.decoration-5 {
  bottom: 25%;
  right: 15%;
  animation-delay: 1s;
}

@keyframes gentle-float {
  0%, 100% {
    transform: translateY(0) scale(1) rotate(0deg);
    opacity: 0.4;
  }
  50% {
    transform: translateY(-15rpx) scale(1.05) rotate(5deg);
    opacity: 0.8;
  }
}

@keyframes breathe {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.8;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.4;
  }
}

.app-title {
  font-size: 52rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2), 0 0 8rpx rgba(255, 255, 255, 0.1);
  position: relative;
  z-index: 10;
  letter-spacing: 2rpx;
  animation: titlePulse 3s ease-in-out infinite;
}

@keyframes titlePulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.95;
    transform: scale(1.02);
  }
}

.app-subtitle {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
  position: relative;
  z-index: 10;
  line-height: 1.5;
  max-width: 600rpx;
  margin: 0 auto;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  letter-spacing: 1rpx;
}

/* 主要内容区域 */
.main-content {
  padding: 0 24rpx 120rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 10;
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 即将到来的生日部分 */
.upcoming-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  letter-spacing: 0.5rpx;
}

.upcoming-card {
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  color: #1f2937;
  position: relative;
  overflow: hidden;
  border-radius: 28rpx;
  box-shadow: 
    0 10rpx 40rpx rgba(0, 0, 0, 0.1),
    0 2rpx 10rpx rgba(0, 0, 0, 0.05),
    0 1rpx 0 rgba(255, 255, 255, 0.6) inset;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.upcoming-card:active {
  transform: translateY(2rpx) scale(0.99);
  box-shadow: 
    0 8rpx 20rpx rgba(0, 0, 0, 0.08),
    0 1rpx 0 rgba(255, 255, 255, 0.6) inset;
}

.upcoming-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(102, 126, 234, 0.1) 0%, 
    rgba(118, 75, 162, 0.05) 100%);
  pointer-events: none;
}

.upcoming-content {
  position: relative;
  z-index: 2;
  padding: 32rpx;
}

.countdown-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(102, 126, 234, 0.18);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  border-radius: 20rpx;
  width: 100rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 
    0 4rpx 16rpx rgba(102, 126, 234, 0.15),
    0 1rpx 0 rgba(255, 255, 255, 0.4) inset;
}

.countdown-number {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1;
  color: #667eea;
  text-shadow: 0 1rpx 3rpx rgba(102, 126, 234, 0.2);
}

.countdown-unit {
  font-size: 18rpx;
  opacity: 0.8;
  margin-top: 2rpx;
  color: #6b7280;
}

.birthday-info {
  padding-right: 120rpx;
}

.name-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.name-section .avatar {
  width: 56rpx;
  height: 56rpx;
  font-size: 32rpx;
  margin-right: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.name-details .name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #1f2937;
}

.name-details .tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
}

.tag-mini {
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  background: rgba(102, 126, 234, 0.12);
  color: #667eea;
  border-radius: 12rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.25);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.03);
  transition: all 0.2s ease;
}

.birthday-details {
  margin-top: 24rpx;
}

.date-info {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.date-info .icon,
.meta-item .icon {
  display: inline-block;
  margin-right: 6rpx;
  transform-origin: center;
  animation: iconPulse 3s ease-in-out infinite;
}

@keyframes iconPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.date-type {
  font-size: 22rpx;
  opacity: 0.8;
  margin-left: 8rpx;
}

.meta-info {
  display: flex;
  gap: 24rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: floatIcon 4s ease-in-out infinite;
}

@keyframes floatIcon {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.meta-item {
  font-size: 24rpx;
  opacity: 0.9;
  display: flex;
  align-items: center;
}

.gesture-hand {
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: handPulse 2s ease-in-out infinite;
}

@keyframes handPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 工具区域 */
.tools-section {
  margin-bottom: 36rpx;
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #9ca3af;
  z-index: 2;
  pointer-events: none;
}

.search-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 20rpx 20rpx 20rpx 56rpx;
  font-size: 26rpx;
  color: #374151;
  box-shadow: 
    0 6rpx 20rpx rgba(0, 0, 0, 0.05),
    0 2rpx 8rpx rgba(0, 0, 0, 0.03),
    0 1rpx 0 rgba(255, 255, 255, 0.6) inset;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 72rpx;
  line-height: 1.4;
}

.search-input:focus {
  border-color: rgba(102, 126, 234, 0.5);
  box-shadow: 
    0 6rpx 24rpx rgba(102, 126, 234, 0.15),
    0 1rpx 0 rgba(255, 255, 255, 0.6) inset;
  outline: none;
  background: rgba(255, 255, 255, 0.85);
  transform: translateY(-1rpx);
}

.search-input::placeholder {
  color: #9ca3af;
  font-size: 24rpx;
  opacity: 0.7;
}

.filter-tags {
  margin-bottom: 8rpx;
}

.tags-scroll {
  white-space: nowrap;
}

.tags-container {
  display: flex;
  padding: 8rpx 0;
}

.tags-container .tag {
  flex-shrink: 0;
  margin-right: 16rpx;
  white-space: nowrap;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.7);
  color: #6b7280;
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.tags-container .tag.active {
  background: rgba(102, 126, 234, 0.15);
  color: #667eea;
  border: 1rpx solid rgba(102, 126, 234, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.1);
  transform: translateY(-1rpx);
}

/* 列表区域 */
.list-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.count-badge {
  background: rgba(102, 126, 234, 0.15);
  color: #667eea;
  border-radius: 16rpx;
  padding: 4rpx 12rpx;
  font-size: 18rpx;
  font-weight: 500;
  margin-left: 10rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.25);
  box-shadow: 0 1rpx 4rpx rgba(102, 126, 234, 0.1);
}

.add-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  color: #667eea;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 6rpx 20rpx rgba(0, 0, 0, 0.08),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    0 1rpx 0 rgba(255, 255, 255, 0.6) inset;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.92);
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 
    0 3rpx 10rpx rgba(0, 0, 0, 0.06),
    0 1rpx 0 rgba(255, 255, 255, 0.6) inset;
}

.add-btn-icon {
  font-size: 24rpx;
}


/* 生日条目 */
.birthday-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.birthday-item {
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 24rpx;
  box-shadow: 
    0 6rpx 24rpx rgba(0, 0, 0, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.03),
    0 1rpx 0 rgba(255, 255, 255, 0.6) inset;
}

.birthday-item:active {
  transform: translateY(2rpx) scale(0.99);
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 
    0 3rpx 12rpx rgba(0, 0, 0, 0.04),
    0 1rpx 0 rgba(255, 255, 255, 0.6) inset;
}

.item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-left .avatar {
  width: 52rpx;
  height: 52rpx;
  font-size: 28rpx;
  margin-right: 16rpx;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.basic-info {
  flex: 1;
}

.basic-info .name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.birthday-date {
  font-size: 22rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.age-info {
  color: #9ca3af;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
}

.tags-row .tag-mini {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  font-size: 16rpx;
  padding: 3rpx 8rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.15);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.02);
}

.item-right {
  text-align: center;
  min-width: 80rpx;
}

.days-left {
  margin-bottom: 8rpx;
}

.days-number {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
  line-height: 1;
  text-shadow: 0 1rpx 2rpx rgba(102, 126, 234, 0.1);
}

.days-text {
  font-size: 16rpx;
  color: #9ca3af;
  margin-top: 2rpx;
}

.constellation-info {
  font-size: 18rpx;
  color: #9ca3af;
}



/* 容器背景优化 */
.container {
  background: linear-gradient(180deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.05) 100%);
  min-height: 100vh;
}

/* 卡片悬停效果 */
.card {
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(2rpx) scale(0.98);
}

/* 内容滑入动画 */
.slide-up {
  animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 响应式优化 */
@media screen and (max-width: 320px) {
  .header-section {
    padding: 60rpx 30rpx 30rpx;
  }
  
  .app-title {
    font-size: 40rpx;
  }
  
  .upcoming-content {
    padding: 30rpx;
  }
  
  .countdown-badge {
    width: 100rpx;
    height: 100rpx;
  }
  
  .countdown-number {
    font-size: 28rpx;
  }
  
  .item-content {
    padding: 24rpx;
  }
}