  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 140rpx;
  height: 140rpx;
  pointer-events: none;
}

.countdown-sparkles-compact .sparkle {
  position: absolute;
  font-size: 16rpx;
  animation: sparkleOrbitCompact 3s linear infinite;
}

.countdown-sparkles-compact .sp-1 {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 0s;
}

.countdown-sparkles-compact .sp-2 {
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  animation-delay: 1s;
}

.countdown-sparkles-compact .sp-3 {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 2s;
}

@keyframes sparkleOrbitCompact {
  0% {
    opacity: 0.6;
    transform: translateX(-50%) translateY(-50%) scale(0.9);
  }
  50% {
    opacity: 1;
    transform: translateX(-50%) translateY(-50%) scale(1.1);
