/* pages/index/index.wxss */

/* 顶部标题区域 */
.header-section {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa726 60%, #ff8a95 100%);
  position: relative;
  overflow: hidden;
}

.header-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.header-section::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 4s ease-in-out infinite reverse;
}

/* 头部装饰元素 */
.header-decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.decoration {
  position: absolute;
  font-size: 32rpx;
  animation: float-decoration 6s ease-in-out infinite;
}

.decoration-1 {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
  animation-duration: 8s;
}

.decoration-2 {
  top: 25%;
  right: 15%;
  animation-delay: 1s;
  animation-duration: 7s;
}

.decoration-3 {
  bottom: 30%;
  left: 20%;
  animation-delay: 2s;
  animation-duration: 9s;
}

.decoration-4 {
  top: 40%;
  right: 25%;
  animation-delay: 3s;
  animation-duration: 6s;
}

.decoration-5 {
  bottom: 20%;
  right: 10%;
  animation-delay: 4s;
  animation-duration: 7.5s;
}

@keyframes float-decoration {
  0%, 100% {
    transform: translateY(0) rotate(0deg) scale(1);
    opacity: 0.6;
  }
  25% {
    transform: translateY(-20rpx) rotate(90deg) scale(1.1);
    opacity: 0.8;
  }
  50% {
    transform: translateY(-10rpx) rotate(180deg) scale(0.9);
    opacity: 1;
  }
  75% {
    transform: translateY(-15rpx) rotate(270deg) scale(1.05);
    opacity: 0.7;
  }
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  position: relative;
  z-index: 10;
  animation: subtle-glow 3s ease-in-out infinite alternate;
}

@keyframes subtle-glow {
  0% {
    text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.3);
  }
  100% {
    text-shadow: 0 0 20rpx rgba(255, 255, 255, 0.5);
  }
}

/* 主要内容区域 */
.main-content {
  padding: 0 30rpx 120rpx;
}

/* 即将到来的生日部分 */
.upcoming-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.upcoming-card {
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa726 100%);
  color: white;
  position: relative;
  overflow: hidden;
}

.upcoming-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.upcoming-content {
  position: relative;
  z-index: 2;
  padding: 40rpx;
}

.countdown-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.countdown-number {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1;
}

.countdown-unit {
  font-size: 20rpx;
  opacity: 0.9;
  margin-top: 4rpx;
}

.birthday-info {
  padding-right: 140rpx;
}

.name-section {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.name-section .avatar {
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.name-details .name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.name-details .tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag-mini {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: 12rpx;
}

.birthday-details {
  margin-top: 24rpx;
}

.date-info {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.date-type {
  font-size: 22rpx;
  opacity: 0.8;
  margin-left: 8rpx;
}

.meta-info {
  display: flex;
  gap: 24rpx;
}

.meta-item {
  font-size: 24rpx;
  opacity: 0.9;
  display: flex;
  align-items: center;
}

/* 工具区域 */
.tools-section {
  margin-bottom: 32rpx;
}

.search-box {
  position: relative;
  margin-bottom: 24rpx;
}

.search-icon {
  position: absolute;
  left: 28rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #a8b3c7;
  z-index: 2;
  pointer-events: none;
}

.search-input {
  width: 100%;
  background: white;
  border-radius: 50rpx;
  padding: 24rpx 24rpx 24rpx 64rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f0f0f0;
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 80rpx;
  line-height: 1.4;
}

.search-input:focus {
  border-color: #ff6b9d;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.15);
  outline: none;
}

.search-input::placeholder {
  color: #a8b3c7;
  font-size: 26rpx;
  opacity: 0.8;
}

.filter-tags {
  margin-bottom: 8rpx;
}

.tags-scroll {
  white-space: nowrap;
}

.tags-container {
  display: flex;
  padding: 8rpx 0;
}

.tags-container .tag {
  flex-shrink: 0;
  margin-right: 16rpx;
  white-space: nowrap;
}

/* 列表区域 */
.list-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.count-badge {
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa726 100%);
  color: white;
  border-radius: 20rpx;
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  margin-left: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.3);
}

.add-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa726 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.95);
}

.add-btn-icon {
  font-size: 28rpx;
}


/* 生日条目 */
.birthday-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.birthday-item {
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.birthday-item:active {
  transform: translateY(2rpx);
}

.item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-left .avatar {
  width: 64rpx;
  height: 64rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.basic-info {
  flex: 1;
}

.basic-info .name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.birthday-date {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 12rpx;
}

.age-info {
  color: #95a5a6;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tags-row .tag-mini {
  background: #f8f9fa;
  color: #7f8c8d;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
}

.item-right {
  text-align: center;
  min-width: 100rpx;
}

.days-left {
  margin-bottom: 12rpx;
}

.days-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff6b9d;
  line-height: 1;
}

.days-text {
  font-size: 20rpx;
  color: #7f8c8d;
  margin-top: 4rpx;
}

.zodiac-info {
  font-size: 22rpx;
  color: #95a5a6;
}



/* 响应式优化 */
@media screen and (max-width: 320px) {
  .header-section {
    padding: 60rpx 30rpx 30rpx;
  }
  
  .app-title {
    font-size: 40rpx;
  }
  
  .upcoming-content {
    padding: 30rpx;
  }
  
  .countdown-badge {
    width: 100rpx;
    height: 100rpx;
  }
  
  .countdown-number {
    font-size: 28rpx;
  }
  
  .item-content {
    padding: 24rpx;
  }
}