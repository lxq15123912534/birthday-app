/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg,
    rgba(255, 106, 166, 0.05) 0%,
    rgba(253, 186, 116, 0.04) 25%,
    rgba(154, 230, 180, 0.03) 50%,
    rgba(99, 179, 237, 0.04) 75%,
    rgba(217, 70, 239, 0.05) 100%);
  padding: 0;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 顶部区域 - 支持主题切换 */
.header-section {
  background: linear-gradient(145deg,
    #ff6ba6 0%,
    #fdba74 25%,
    #9ae6b4 50%,
    #63b3ed 75%,
    #d946ef 100%);
  padding: 100rpx 24rpx 80rpx;
  color: white;
  position: relative;
  overflow: hidden;
  transition: background 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 主题特定样式 */
/* 海洋主题 */
.ocean-theme .header-section {
  background: linear-gradient(145deg,
    #0891b2 0%,
    #0ea5e9 25%,
    #3b82f6 50%,
    #6366f1 75%,
    #8b5cf6 100%);
}

/* 森林主题 */
.forest-theme .header-section {
  background: linear-gradient(145deg,
    #059669 0%,
    #10b981 25%,
    #34d399 50%,
    #6ee7b7 75%,
    #a7f3d0 100%);
}

/* 晚霞主题 */
.sunset-theme .header-section {
  background: linear-gradient(145deg,
    #c084fc 0%,
    #e879f9 25%,
    #f472b6 50%,
    #fb7185 75%,
    #fbbf24 100%);
}

.header-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

.header-section::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.03) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: breathe 4s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.8;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.4;
  }
}

/* 头部信息卡片 */
.header-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 28rpx;
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 1rpx 0 rgba(255, 255, 255, 0.2) inset;
}

.countdown-section {
  display: flex;
  align-items: center;
}

.countdown-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.countdown-number {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 1;
}

.countdown-text {
  font-size: 20rpx;
  opacity: 0.9;
  margin-top: 2rpx;
}

.countdown-info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  letter-spacing: 0.5rpx;
}

.date {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 6rpx;
}

.lunar-info {
  font-size: 20rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}

.distance {
  font-size: 24rpx;
  margin-bottom: 6rpx;
}

.blessing {
  font-size: 20rpx;
  opacity: 0.8;
  font-style: italic;
  line-height: 1.4;
}

/* 内容区域 */
.content-wrapper {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
  padding: 24rpx;
  padding-bottom: 160rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 10;
  border-radius: 24rpx 24rpx 0 0;
  min-height: calc(100vh - 300rpx);
}

/* 信息卡片 */
.info-card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.06),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.info-card:active {
  transform: translateY(1rpx);
  background: rgba(255, 255, 255, 0.8);
}

.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 基本信息行 */
.info-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 24rpx;
  color: #6b7280;
  min-width: 100rpx;
  margin-right: 16rpx;
}

.info-value {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
  flex: 1;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.tag {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  padding: 6rpx 12rpx;
  margin: 3rpx 6rpx 3rpx 0;
  border-radius: 12rpx;
  font-size: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

/* 日期网格 */
.date-grid {
  display: flex;
  gap: 20rpx;
}

.date-item {
  flex: 1;
  background: rgba(102, 126, 234, 0.08);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.date-type {
  font-size: 20rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.date-value {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 星座生肖网格 */
.zodiac-grid {
  display: flex;
  gap: 20rpx;
}

.zodiac-item {
  flex: 1;
  display: flex;
  align-items: center;
  background: rgba(118, 75, 162, 0.08);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  border: 1rpx solid rgba(118, 75, 162, 0.1);
}

.zodiac-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.zodiac-info {
  flex: 1;
}

.zodiac-label {
  font-size: 20rpx;
  color: #6b7280;
  margin-bottom: 6rpx;
}

.zodiac-value {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 年龄信息 */
.age-info {
  background: rgba(102, 126, 234, 0.05);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.08);
}

.age-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.age-row:last-child {
  border-bottom: none;
}

.age-label {
  font-size: 24rpx;
  color: #6b7280;
}

.age-value {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
}


/* 底部悬浮操作按钮 */
/* 生日主题按钮区域 */
.birthday-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg,
    rgba(255, 255, 255, 0.95) 0%,
    rgba(255, 240, 245, 0.98) 50%,
    rgba(255, 255, 255, 0.95) 100%);
  backdrop-filter: blur(30rpx);
  -webkit-backdrop-filter: blur(30rpx);
  border-top: 2rpx solid rgba(255, 182, 193, 0.3);
  box-shadow:
    0 -8rpx 32rpx rgba(255, 182, 193, 0.15),
    0 -2rpx 8rpx rgba(0, 0, 0, 0.05),
    0 1rpx 0 rgba(255, 255, 255, 0.8) inset;
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
}

.birthday-actions-inner {
  display: flex;
  gap: 16rpx;
  padding: 20rpx 24rpx 24rpx;
  align-items: stretch;
}

/* 生日主题按钮样式 */
.birthday-btn {
  flex: 1;
  min-height: 120rpx;
  border-radius: 24rpx;
  padding: 16rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 182, 193, 0.2);
  box-shadow:
    0 4rpx 16rpx rgba(255, 182, 193, 0.1),
    0 2rpx 4rpx rgba(0, 0, 0, 0.05),
    0 1rpx 0 rgba(255, 255, 255, 0.8) inset;
}

.birthday-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg,
    rgba(255, 182, 193, 0.1) 0%,
    rgba(255, 240, 245, 0.2) 50%,
    rgba(255, 182, 193, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.4s ease;
  z-index: 1;
}

.birthday-btn:active::before {
  opacity: 1;
}

.birthday-btn:active {
  transform: scale(0.96) translateY(2rpx);
  box-shadow:
    0 2rpx 8rpx rgba(255, 182, 193, 0.15),
    0 1rpx 2rpx rgba(0, 0, 0, 0.1),
    0 1rpx 0 rgba(255, 255, 255, 0.9) inset;
}

.btn-emoji {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 2;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  animation: gentleBounce 2s ease-in-out infinite;
}

@keyframes gentleBounce {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-2rpx) scale(1.05);
  }
}

.btn-label {
  font-size: 20rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 4rpx;
  position: relative;
  z-index: 2;
  letter-spacing: 0.5rpx;
}

.btn-subtitle {
  font-size: 16rpx;
  color: #6b7280;
  position: relative;
  z-index: 2;
  opacity: 0.8;
  text-align: center;
  line-height: 1.3;
}

/* 不同按钮的个性化样式 */
.home-btn {
  border-color: rgba(34, 197, 94, 0.3);
}

.home-btn .btn-emoji {
  color: #22c55e;
}

.home-btn .btn-label {
  color: #15803d;
}

.home-btn:active {
  background: rgba(34, 197, 94, 0.1);
}

.care-btn {
  border-color: rgba(168, 85, 247, 0.3);
}

.care-btn .btn-emoji {
  color: #a855f7;
}

.care-btn .btn-label {
  color: #7c3aed;
}

.care-btn:active {
  background: rgba(168, 85, 247, 0.1);
}

.farewell-btn {
  border-color: rgba(239, 68, 68, 0.3);
}

.farewell-btn .btn-emoji {
  color: #ef4444;
}

.farewell-btn .btn-label {
  color: #dc2626;
}

.farewell-btn:active {
  background: rgba(239, 68, 68, 0.1);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
}