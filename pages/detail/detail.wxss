/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg,
    rgba(255, 106, 166, 0.05) 0%,
    rgba(253, 186, 116, 0.04) 25%,
    rgba(154, 230, 180, 0.03) 50%,
    rgba(99, 179, 237, 0.04) 75%,
    rgba(217, 70, 239, 0.05) 100%);
  padding: 0;
}

/* 顶部区域 - 多彩渐变设计 */
.header-section {
  background: linear-gradient(145deg,
    #ff6ba6 0%,
    #fdba74 25%,
    #9ae6b4 50%,
    #63b3ed 75%,
    #d946ef 100%);
  padding: 100rpx 24rpx 80rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.header-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

.header-section::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.03) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: breathe 4s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.8;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.4;
  }
}

/* 头部信息卡片 */
.header-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 28rpx;
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 1rpx 0 rgba(255, 255, 255, 0.2) inset;
}

.countdown-section {
  display: flex;
  align-items: center;
}

.countdown-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.countdown-number {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 1;
}

.countdown-text {
  font-size: 20rpx;
  opacity: 0.9;
  margin-top: 2rpx;
}

.countdown-info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  letter-spacing: 0.5rpx;
}

.date {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 6rpx;
}

.lunar-info {
  font-size: 20rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}

.distance {
  font-size: 24rpx;
  margin-bottom: 6rpx;
}

.blessing {
  font-size: 20rpx;
  opacity: 0.8;
  font-style: italic;
  line-height: 1.4;
}

/* 内容区域 */
.content-wrapper {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
  padding: 24rpx;
  padding-bottom: 160rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 10;
  border-radius: 24rpx 24rpx 0 0;
  min-height: calc(100vh - 300rpx);
}

/* 信息卡片 */
.info-card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.06),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.info-card:active {
  transform: translateY(1rpx);
  background: rgba(255, 255, 255, 0.8);
}

.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 基本信息行 */
.info-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 24rpx;
  color: #6b7280;
  min-width: 100rpx;
  margin-right: 16rpx;
}

.info-value {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
  flex: 1;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.tag {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  padding: 6rpx 12rpx;
  margin: 3rpx 6rpx 3rpx 0;
  border-radius: 12rpx;
  font-size: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

/* 日期网格 */
.date-grid {
  display: flex;
  gap: 20rpx;
}

.date-item {
  flex: 1;
  background: rgba(102, 126, 234, 0.08);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.date-type {
  font-size: 20rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.date-value {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 星座生肖网格 */
.zodiac-grid {
  display: flex;
  gap: 20rpx;
}

.zodiac-item {
  flex: 1;
  display: flex;
  align-items: center;
  background: rgba(118, 75, 162, 0.08);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  border: 1rpx solid rgba(118, 75, 162, 0.1);
}

.zodiac-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.zodiac-info {
  flex: 1;
}

.zodiac-label {
  font-size: 20rpx;
  color: #6b7280;
  margin-bottom: 6rpx;
}

.zodiac-value {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 年龄信息 */
.age-info {
  background: rgba(102, 126, 234, 0.05);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.08);
}

.age-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.age-row:last-child {
  border-bottom: none;
}

.age-label {
  font-size: 24rpx;
  color: #6b7280;
}

.age-value {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
}


/* 底部悬浮操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(249, 249, 249, 0.98);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow:
    0 -4rpx 20rpx rgba(0, 0, 0, 0.06),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
}

.bottom-actions-inner {
  display: flex;
  gap: 12rpx;
  padding: 8rpx 24rpx 12rpx;
  height: 100rpx;
  box-sizing: border-box;
  align-items: center;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  padding: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: none;
  font-size: 26rpx;
  transition: all 0.3s ease;
  overflow: hidden;
  position: relative;
  box-sizing: border-box;
}

.action-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-btn:active::after {
  opacity: 1;
}

.action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 12rpx rgba(255, 107, 157, 0.4);
}

.btn-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
  color: white;
}

.btn-text {
  font-size: 24rpx;
  font-weight: 500;
  color: white;
}

.back-btn {
  background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
  box-shadow: 0 6rpx 20rpx rgba(149, 165, 166, 0.3);
}

.back-btn:active {
  box-shadow: 0 3rpx 12rpx rgba(149, 165, 166, 0.4);
}

.delete-btn {
  background: linear-gradient(135deg, #f87171 0%, #ef4444 100%);
  box-shadow: 0 6rpx 20rpx rgba(248, 113, 113, 0.3);
}

.delete-btn:active {
  box-shadow: 0 3rpx 12rpx rgba(248, 113, 113, 0.4);
}

.edit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.edit-btn:active {
  box-shadow: 0 3rpx 12rpx rgba(102, 126, 234, 0.4);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
}