/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffeef8 0%, #fff5f1 50%, #f8f0ff 100%);
  padding: 0;
}

/* 顶部区域 */
.header-section {
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa726 60%, #ff8a95 100%);
  padding: 80rpx 30rpx 60rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.header-section::before {
  content: '';
  position: absolute;
  top: -40%;
  right: -20%;
  width: 250rpx;
  height: 250rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite;
}

.header-section::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -15%;
  width: 180rpx;
  height: 180rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-12rpx) rotate(180deg); }
}

/* 头部信息卡片 */
.header-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.countdown-section {
  display: flex;
  align-items: center;
}

.countdown-circle {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  backdrop-filter: blur(10rpx);
}

.countdown-number {
  font-size: 48rpx;
  font-weight: bold;
}

.countdown-text {
  font-size: 24rpx;
  opacity: 0.8;
}

.countdown-info {
  flex: 1;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.date {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.lunar-info {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
}

.distance {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.blessing {
  font-size: 24rpx;
  opacity: 0.8;
  font-style: italic;
}

/* 内容区域 */
.content-wrapper {
  background: linear-gradient(135deg, #ffeef8 0%, #fff5f1 50%, #f8f0ff 100%);
  padding: 30rpx;
  min-height: calc(100vh - 300rpx);
}

/* 信息卡片 */
.info-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 基本信息行 */
.info-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
  margin-right: 20rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.tag {
  background: rgba(255, 107, 157, 0.1);
  color: #ff6b9d;
  padding: 8rpx 16rpx;
  margin: 4rpx 8rpx 4rpx 0;
  border-radius: 16rpx;
  font-size: 24rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.2);
}

/* 日期网格 */
.date-grid {
  display: flex;
  gap: 20rpx;
}

.date-item {
  flex: 1;
  background: rgba(255, 167, 38, 0.1);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 167, 38, 0.2);
}

.date-type {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.date-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 星座生肖网格 */
.zodiac-grid {
  display: flex;
  gap: 20rpx;
}

.zodiac-item {
  flex: 1;
  display: flex;
  align-items: center;
  background: rgba(255, 138, 149, 0.1);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  border: 1rpx solid rgba(255, 138, 149, 0.2);
}

.zodiac-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.zodiac-info {
  flex: 1;
}

.zodiac-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.zodiac-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 年龄信息 */
.age-info {
  background: rgba(255, 107, 157, 0.05);
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.1);
}

.age-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.age-row:last-child {
  border-bottom: none;
}

.age-label {
  font-size: 28rpx;
  color: #666;
}

.age-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}


/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: none;
  font-size: 28rpx;
}

.action-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #333;
}

.edit-btn {
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa726 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
}

.edit-btn .btn-text {
  color: white;
}


.delete-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.delete-btn .btn-text {
  color: white;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}