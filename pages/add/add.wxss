/* pages/add/add.wxss */

/* 顶部标题区域 - 多彩渐变设计 */
.header-section {
  padding: 100rpx 40rpx 80rpx;
  background: linear-gradient(145deg,
    #ff6ba6 0%,
    #fdba74 25%,
    #9ae6b4 50%,
    #63b3ed 75%,
    #d946ef 100%);
  position: relative;
  overflow: hidden;
}

.header-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

.header-section::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.03) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: breathe 4s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.8;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.4;
  }
}

.header-content {
  text-align: center;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 1rpx;
}

.page-title .icon {
  margin-right: 12rpx;
  font-size: 36rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 300;
  line-height: 1.5;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 表单容器 */
.form-container {
  padding: 0 24rpx 140rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 10;
}

.form-card {
  margin-bottom: 20rpx;
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.08) 0%,
    rgba(253, 186, 116, 0.06) 25%,
    rgba(154, 230, 180, 0.05) 50%,
    rgba(99, 179, 237, 0.06) 75%,
    rgba(217, 70, 239, 0.08) 100%);
  backdrop-filter: blur(25rpx);
  -webkit-backdrop-filter: blur(25rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  box-shadow:
    0 8rpx 28rpx rgba(255, 106, 166, 0.08),
    0 4rpx 14rpx rgba(253, 186, 116, 0.06),
    0 2rpx 0 rgba(255, 255, 255, 0.8) inset;
  overflow: hidden;
  transition: all 0.3s ease;
}

.form-card:active {
  transform: translateY(1rpx);
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.12) 0%,
    rgba(253, 186, 116, 0.1) 25%,
    rgba(154, 230, 180, 0.08) 50%,
    rgba(99, 179, 237, 0.1) 75%,
    rgba(217, 70, 239, 0.12) 100%);
}

.form-card .card-title {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #1f2937;
}

.form-card .card-title .icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

/* 表单元素 */
.form-group {
  margin-bottom: 0;
}

.form-group:not(:last-child) {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.05) 0%,
    rgba(253, 186, 116, 0.04) 50%,
    rgba(99, 179, 237, 0.05) 100%);
  backdrop-filter: blur(15rpx);
  -webkit-backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  font-size: 26rpx;
  color: #374151;
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 72rpx;
  display: flex;
  align-items: center;
}

.form-input:focus {
  background: linear-gradient(135deg,
    rgba(255, 106, 166, 0.1) 0%,
    rgba(253, 186, 116, 0.08) 50%,
    rgba(99, 179, 237, 0.1) 100%);
  border-color: rgba(255, 106, 166, 0.4);
  box-shadow:
    0 6rpx 20rpx rgba(255, 106, 166, 0.12),
    0 3rpx 10rpx rgba(253, 186, 116, 0.08),
    0 2rpx 0 rgba(255, 255, 255, 0.8) inset;
  outline: none;
}

.form-input::placeholder {
  color: #9ca3af;
  font-size: 24rpx;
  opacity: 0.7;
}

/* 日期类型选择器 */
.date-type-selector {
  display: flex;
  gap: 16rpx;
}

.type-option {
  flex: 1;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.type-option:active {
  transform: scale(0.98);
}

.type-option.active {
  background: linear-gradient(135deg,
    #ff6ba6 0%,
    #fdba74 50%,
    #63b3ed 100%);
  color: white;
  border-color: rgba(255, 106, 166, 0.5);
  box-shadow: 0 6rpx 20rpx rgba(255, 106, 166, 0.3);
}

.type-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.type-text {
  flex: 1;
}

.type-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.type-desc {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 日期选择器 */
.date-picker-group {
  display: flex;
  gap: 12rpx;
}

.picker-item {
  flex: 1;
}

.picker-label {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 12rpx;
  text-align: center;
}

.picker-wrapper {
  width: 100%;
}

.picker-display {
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 20rpx 12rpx;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
}

.picker-display:active {
  background: rgba(255, 255, 255, 0.7);
  border-color: rgba(102, 126, 234, 0.3);
  box-shadow: 0 2rpx 12rpx rgba(102, 126, 234, 0.15);
}

.picker-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.picker-unit {
  font-size: 20rpx;
  color: #6b7280;
  margin-left: 4rpx;
}

.picker-arrow {
  font-size: 14rpx;
  color: #9ca3af;
  margin-left: 6rpx;
}

/* 标签部分 */
.tags-section {
  margin-top: 8rpx;
}

.section-label {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add-custom-btn {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.add-custom-btn:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.95);
}

.add-custom-btn .icon {
  margin-right: 6rpx;
  font-size: 18rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  color: #6b7280;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  position: relative;
}

.tag:active {
  transform: scale(0.95);
}

.tag.active {
  background: linear-gradient(135deg,
    #ff6ba6 0%,
    #fdba74 50%,
    #63b3ed 100%);
  color: white;
  border-color: rgba(255, 106, 166, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(255, 106, 166, 0.3);
}

.selected-tag {
  background: linear-gradient(135deg,
    #ff6ba6 0%,
    #fdba74 50%,
    #63b3ed 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 106, 166, 0.3);
}

.remove-icon {
  margin-left: 8rpx;
  font-size: 20rpx;
  opacity: 0.8;
}

.selected-tags {
  margin-bottom: 24rpx;
}

/* 自定义标签输入 */
.custom-tag-section {
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ecf0f1 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  border: 2rpx dashed #bdc3c7;
}

.custom-tag-input {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.custom-input {
  flex: 1;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 12rpx;
  padding: 16rpx 12rpx;
  font-size: 24rpx;
  color: #374151;
}

.custom-input:focus {
  border-color: rgba(102, 126, 234, 0.3);
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.custom-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.confirm {
  background: linear-gradient(135deg, #4ade80 0%, #22c55e 100%);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(74, 222, 128, 0.3);
}

.action-btn.cancel {
  background: linear-gradient(135deg, #f87171 0%, #ef4444 100%);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(248, 113, 113, 0.3);
}

/* 底部悬浮操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(102, 126, 234, 0.08);
  box-shadow: 
    0 -4rpx 20rpx rgba(0, 0, 0, 0.06),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
  z-index: 1000;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  padding: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: none;
  font-size: 28rpx;
  transition: all 0.3s ease;
  overflow: hidden;
  position: relative;
}

.action-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-btn:active::after {
  opacity: 1;
}

.action-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  color: white;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

.back-btn {
  background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
  box-shadow: 0 6rpx 20rpx rgba(149, 165, 166, 0.3);
}

.back-btn:active {
  box-shadow: 0 3rpx 12rpx rgba(149, 165, 166, 0.4);
}

.save-btn {
  background: linear-gradient(135deg,
    #ff6ba6 0%,
    #fdba74 50%,
    #63b3ed 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 106, 166, 0.3);
}

.save-btn:active {
  box-shadow: 0 6rpx 18rpx rgba(255, 106, 166, 0.4);
}

/* 动画效果 */
.form-card {
  animation: slideInUp 0.3s ease-out;
}

.form-card:nth-child(1) { animation-delay: 0.1s; }
.form-card:nth-child(2) { animation-delay: 0.2s; }
.form-card:nth-child(3) { animation-delay: 0.3s; }

@keyframes slideInUp {
  from {
    transform: translateY(60rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 响应式优化 */
@media screen and (max-width: 320px) {
  .header-section {
    padding: 60rpx 30rpx 30rpx;
  }
  
  .page-title {
    font-size: 36rpx;
  }
  
  .date-picker-group {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .date-type-selector {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .bottom-actions {
    padding: 16rpx 20rpx;
    padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  }
}