.flex-around { justify-content: space-around; }
.flex-1 { flex: 1; }

.hidden { display: none; }
.relative { position: relative; }
.absolute { position: absolute; }

.overflow-hidden { overflow: hidden; }
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 动画 */
