/**app.wxss**/

/* 导入全局彩色主题样式 */
@import 'styles/globals.wxss';

/* 全局重置 */
page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  background: linear-gradient(180deg,
    rgba(255, 106, 166, 0.05) 0%,
    rgba(253, 186, 116, 0.04) 25%,
    rgba(154, 230, 180, 0.03) 50%,
    rgba(99, 179, 237, 0.04) 75%,
    rgba(217, 70, 239, 0.05) 100%);
  color: #374151;
  line-height: 1.6;
  font-weight: 400;
}

/* 设计系统 - 多彩配色方案 */
.primary-color { color: #ff6ba6; }
.secondary-color { color: #fdba74; }
.accent-color { color: #9ae6b4; }
.success-color { color: #4ade80; }
.warning-color { color: #fbbf24; }
.danger-color { color: #f87171; }
.text-primary { color: #1f2937; }
.text-secondary { color: #6b7280; }
.text-muted { color: #9ca3af; }

/* 设计系统 - 间距 */
.p-xs { padding: 8rpx; }
.p-sm { padding: 16rpx; }
.p-md { padding: 24rpx; }
.p-lg { padding: 32rpx; }
.p-xl { padding: 48rpx; }

.m-xs { margin: 8rpx; }
.m-sm { margin: 16rpx; }
.m-md { margin: 24rpx; }
.m-lg { margin: 32rpx; }
.m-xl { margin: 48rpx; }

/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
  padding: 0;
}

.content-wrapper {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
  position: relative;
}

/* 卡片系统 - 玻璃拟态设计 */
.card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.06),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(1rpx);
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 
    0 2rpx 12rpx rgba(0, 0, 0, 0.08),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
}

.card-header {
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.card-body {
  padding: 24rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.card-subtitle {
  font-size: 22rpx;
  color: #6b7280;
  margin-bottom: 20rpx;
}

/* 按钮系统 */
.btn {
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 24rpx 48rpx;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn:active::after {
  width: 300rpx;
  height: 300rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(255, 255, 255, 0.2), 
    transparent);
  transition: left 0.5s ease;
}

.btn-primary:hover::before {
  left: 100%;
}

.btn-primary:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.btn-secondary {
  background: #ecf0f1;
  color: #2c3e50;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #667eea;
  color: #667eea;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

.btn-large {
  padding: 32rpx 64rpx;
  font-size: 34rpx;
}

/* 输入框系统 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  background: #f8f9fa;
  border: 2rpx solid #e8ecef;
  border-radius: 16rpx;
  padding: 26rpx 24rpx;
  font-size: 30rpx;
  color: #2c3e50;
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 84rpx;
  line-height: 1.4;
}

.form-input:focus {
  background: white;
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  outline: none;
}

.form-input::placeholder {
  color: #a8b3c7;
  font-size: 28rpx;
  opacity: 0.8;
}

/* 标签系统 */
.tag {
  display: inline-block;
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  padding: 10rpx 20rpx;
  margin: 6rpx 6rpx 6rpx 0;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.tag.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: scale(1.02);
  border-color: transparent;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.tag:active {
  transform: scale(0.95);
}

/* 头像/图标系统 */
.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 500;
  font-size: 26rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 状态指示器 */
.badge {
  background: #e74c3c;
  color: white;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  text-align: center;
}

.badge.success {
  background: #2ecc71;
}

.badge.warning {
  background: #f39c12;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #ecf0f1, transparent);
  margin: 32rpx 0;
}

/* 空状态 */
.empty-state {
  min-height: calc(100vh - 300rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 80rpx 40rpx;
  position: relative;
}

.empty-state::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 40%, rgba(255, 107, 157, 0.08) 0%, transparent 50%),
              radial-gradient(circle at 70% 60%, rgba(255, 167, 38, 0.08) 0%, transparent 50%);
  pointer-events: none;
}

.empty-content {
  position: relative;
  z-index: 1;
  max-width: 500rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  color: white;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.25);
  animation: float 3s ease-in-out infinite;
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.empty-icon::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 10s linear infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-8rpx); }
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-title {
  font-size: 42rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
  line-height: 1.3;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 60rpx;
  line-height: 1.8;
  opacity: 0.9;
}

.empty-state .btn {
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 36rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  box-shadow: 0 6rpx 28rpx rgba(102, 126, 234, 0.4),
              0 0 0 0 rgba(102, 126, 234, 0.2);
  transform: translateY(0) scale(1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20rpx);
  min-width: 180rpx;
  max-width: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.empty-state .btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0.1) 50%, 
    rgba(255, 255, 255, 0.05) 100%);
  border-radius: inherit;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.empty-state .btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.4s ease, height 0.4s ease;
}

.empty-state .btn:hover::before {
  opacity: 1;
}

.empty-state .btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 3rpx 14rpx rgba(102, 126, 234, 0.3),
              0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.empty-state .btn:active::after {
  width: 400rpx;
  height: 400rpx;
}

.empty-state .btn .icon {
  margin-right: 12rpx;
  font-size: 28rpx;
  opacity: 0.9;
  transform: translateY(-2rpx);
}

/* 新增按钮的微动画 */
.empty-state .btn {
  animation: buttonPulse 2s ease-in-out infinite;
}

@keyframes buttonPulse {
  0%, 100% {
    box-shadow: 0 6rpx 28rpx rgba(102, 126, 234, 0.4),
                0 0 0 0 rgba(102, 126, 234, 0.2);
  }
  50% {
    box-shadow: 0 6rpx 28rpx rgba(102, 126, 234, 0.4),
                0 0 0 10rpx rgba(102, 126, 234, 0.1);
  }
}

/* 手势按钮设计 */
.gesture-button {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateY(0) scale(1);
}

.gesture-hand {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 40rpx;
  padding: 28rpx 44rpx;
  box-shadow: 0 10rpx 40rpx rgba(102, 126, 234, 0.3);
  transform: translateY(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.hand-emoji {
  font-size: 48rpx;
  animation: pointAnimation 1.5s ease-in-out infinite;
  margin-bottom: 8rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.gesture-text {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 1rpx;
}

/* 手指点击动画 */
@keyframes pointAnimation {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  30% {
    transform: translateY(-8rpx) scale(1.1);
  }
  60% {
    transform: translateY(-4rpx) scale(1.05);
  }
}

/* 闪烁特效 */
.gesture-sparkles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.sparkle {
  position: absolute;
  font-size: 24rpx;
  opacity: 0;
  animation: sparkleAnimation 2s ease-in-out infinite;
}

.sparkle-1 {
  top: 20%;
  left: 15%;
  animation-delay: 0s;
}

.sparkle-2 {
  top: 30%;
  right: 10%;
  animation-delay: 0.7s;
}

.sparkle-3 {
  bottom: 25%;
  left: 20%;
  animation-delay: 1.4s;
}

@keyframes sparkleAnimation {
  0%, 100% {
    opacity: 0;
    transform: translateY(0) rotate(0deg) scale(0.8);
  }
  50% {
    opacity: 1;
    transform: translateY(-20rpx) rotate(180deg) scale(1.2);
  }
}

/* 交互状态 */
.gesture-button:active {
  transform: translateY(4rpx) scale(0.95);
}

.gesture-button:active .gesture-hand {
  transform: translateY(-2rpx);
  box-shadow: 0 5rpx 20rpx rgba(102, 126, 234, 0.4);
}

.gesture-button:active .hand-emoji {
  animation-duration: 0.3s;
  transform: translateY(-4rpx) scale(0.9);
}

/* 悬停效果 */
.gesture-button:hover .gesture-hand {
  transform: translateY(-4rpx);
  box-shadow: 0 14rpx 48rpx rgba(102, 126, 234, 0.4);
}

.gesture-button:hover .sparkle {
  animation-duration: 1s;
}

/* 光晕效果 */
.gesture-hand::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(45deg, 
    rgba(102, 126, 234, 0.6) 0%, 
    rgba(118, 75, 162, 0.6) 25%, 
    rgba(102, 126, 234, 0.6) 50%, 
    rgba(118, 75, 162, 0.6) 75%, 
    rgba(102, 126, 234, 0.6) 100%);
  border-radius: 52rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  animation: rotateGlow 3s linear infinite;
  z-index: -1;
}

.gesture-button:hover .gesture-hand::before {
  opacity: 0.7;
}

@keyframes rotateGlow {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.flex { display: flex; }
.flex-column { flex-direction: column; }
.flex-center { justify-content: center; align-items: center; }
.flex-between { justify-content: space-between; }
.flex-around { justify-content: space-around; }
.flex-1 { flex: 1; }

.hidden { display: none; }
.relative { position: relative; }
.absolute { position: absolute; }

.overflow-hidden { overflow: hidden; }
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 动画 */
.fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

/* 响应式 */
@media screen and (max-width: 320px) {
  .container {
    padding: 20rpx;
  }
  
  .content-wrapper {
    margin-top: 80rpx;
    padding: 24rpx;
  }
}