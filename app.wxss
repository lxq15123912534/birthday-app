/**app.wxss**/

/* 导入全局彩色主题样式 */
@import 'styles/globals.wxss';

/* 全局重置 */
page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  background: linear-gradient(180deg,
    rgba(255, 106, 166, 0.05) 0%,
    rgba(253, 186, 116, 0.04) 25%,
    rgba(154, 230, 180, 0.03) 50%,
    rgba(99, 179, 237, 0.04) 75%,
    rgba(217, 70, 239, 0.05) 100%);
  color: #374151;
  line-height: 1.6;
  font-weight: 400;
}

/* 设计系统 - 多彩配色方案 */
.primary-color { color: #ff6ba6; }
.secondary-color { color: #fdba74; }
.accent-color { color: #9ae6b4; }
.success-color { color: #4ade80; }
.warning-color { color: #fbbf24; }
.danger-color { color: #f87171; }
.text-primary { color: #1f2937; }
.text-secondary { color: #6b7280; }
.text-muted { color: #9ca3af; }

/* 设计系统 - 间距 */
.p-xs { padding: 8rpx; }
.p-sm { padding: 16rpx; }
.p-md { padding: 24rpx; }
.p-lg { padding: 32rpx; }
.p-xl { padding: 48rpx; }

.m-xs { margin: 8rpx; }
.m-sm { margin: 16rpx; }
.m-md { margin: 24rpx; }
.m-lg { margin: 32rpx; }
.m-xl { margin: 48rpx; }

/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
  padding: 0;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.content-wrapper {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
  position: relative;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 全局主题样式 - 增强版 */

/* 经典主题 - 彩虹渐变 */
.classic-theme .container,
.classic-theme .content-wrapper {
  background: linear-gradient(135deg, #fef7f7 0%, #fef3c7 25%, #ecfdf5 50%, #eff6ff 75%, #faf5ff 100%);
}

.classic-theme .card {
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 107, 166, 0.2);
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 166, 0.1);
}

.classic-theme .btn-primary {
  background: linear-gradient(135deg, #ff6ba6 0%, #fdba74 50%, #9ae6b4 100%);
}

.classic-theme .empty-icon {
  background: linear-gradient(135deg, #ff6ba6 0%, #fdba74 25%, #9ae6b4 50%, #63b3ed 75%, #d946ef 100%);
}

/* 海洋主题 - 深蓝系 */
.ocean-theme .container,
.ocean-theme .content-wrapper {
  background: linear-gradient(135deg, #f0f9ff 0%, #dbeafe 50%, #bfdbfe 100%);
}

.ocean-theme .card {
  background: rgba(165, 243, 252, 0.6);
  border: 1rpx solid rgba(8, 145, 178, 0.3);
  box-shadow: 0 4rpx 20rpx rgba(8, 145, 178, 0.15);
}

.ocean-theme .btn-primary {
  background: linear-gradient(135deg, #0891b2 0%, #0ea5e9 50%, #3b82f6 100%);
}

.ocean-theme .empty-icon {
  background: linear-gradient(135deg, #0891b2 0%, #0ea5e9 25%, #3b82f6 50%, #6366f1 75%, #8b5cf6 100%);
}

.ocean-theme .tag.active {
  background: linear-gradient(135deg, #0891b2 0%, #3b82f6 100%);
}

.ocean-theme .gesture-hand {
  background: linear-gradient(135deg, #0891b2 0%, #0ea5e9 25%, #3b82f6 50%, #6366f1 75%, #8b5cf6 100%);
}

/* 森林主题 - 绿色系 */
.forest-theme .container,
.forest-theme .content-wrapper {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 50%, #bbf7d0 100%);
}

.forest-theme .card {
  background: rgba(187, 247, 208, 0.7);
  border: 1rpx solid rgba(5, 150, 105, 0.3);
  box-shadow: 0 4rpx 20rpx rgba(5, 150, 105, 0.15);
}

.forest-theme .btn-primary {
  background: linear-gradient(135deg, #059669 0%, #10b981 50%, #34d399 100%);
}

.forest-theme .empty-icon {
  background: linear-gradient(135deg, #059669 0%, #10b981 25%, #34d399 50%, #6ee7b7 75%, #a7f3d0 100%);
}

.forest-theme .tag.active {
  background: linear-gradient(135deg, #059669 0%, #10b981 100%);
}

.forest-theme .gesture-hand {
  background: linear-gradient(135deg, #059669 0%, #10b981 25%, #34d399 50%, #6ee7b7 75%, #a7f3d0 100%);
}

/* 晚霞主题 - 紫粉系 */
.sunset-theme .container,
.sunset-theme .content-wrapper {
  background: linear-gradient(135deg, #fdf4ff 0%, #fae8ff 50%, #f3e8ff 100%);
}

.sunset-theme .card {
  background: rgba(243, 232, 255, 0.7);
  border: 1rpx solid rgba(192, 132, 252, 0.3);
  box-shadow: 0 4rpx 20rpx rgba(192, 132, 252, 0.15);
}

.sunset-theme .btn-primary {
  background: linear-gradient(135deg, #c084fc 0%, #e879f9 50%, #f472b6 100%);
}

.sunset-theme .empty-icon {
  background: linear-gradient(135deg, #c084fc 0%, #e879f9 25%, #f472b6 50%, #fb7185 75%, #fbbf24 100%);
}

.sunset-theme .tag.active {
  background: linear-gradient(135deg, #c084fc 0%, #e879f9 100%);
}

.sunset-theme .gesture-hand {
  background: linear-gradient(135deg, #c084fc 0%, #e879f9 25%, #f472b6 50%, #fb7185 75%, #fbbf24 100%);
}

/* 卡片系统 - 玻璃拟态设计 */
.card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.06),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(1rpx);
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 
    0 2rpx 12rpx rgba(0, 0, 0, 0.08),
    0 1rpx 0 rgba(255, 255, 255, 0.5) inset;
}

.card-header {
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.card-body {
  padding: 24rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.card-subtitle {
  font-size: 22rpx;
  color: #6b7280;
  margin-bottom: 20rpx;
}

/* 按钮系统 */
.btn {
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 24rpx 48rpx;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn:active::after {
  width: 300rpx;
  height: 300rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(255, 255, 255, 0.2), 
    transparent);
  transition: left 0.5s ease;
}

.btn-primary:hover::before {
  left: 100%;
}

.btn-primary:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.btn-secondary {
  background: #ecf0f1;
  color: #2c3e50;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #667eea;
  color: #667eea;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

.btn-large {
  padding: 32rpx 64rpx;
  font-size: 34rpx;
}

/* 输入框系统 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  background: #f8f9fa;
  border: 2rpx solid #e8ecef;
  border-radius: 16rpx;
  padding: 26rpx 24rpx;
  font-size: 30rpx;
  color: #2c3e50;
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 84rpx;
  line-height: 1.4;
}

.form-input:focus {
  background: white;
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  outline: none;
}

.form-input::placeholder {
  color: #a8b3c7;
  font-size: 28rpx;
  opacity: 0.8;
}

/* 标签系统 */
.tag {
  display: inline-block;
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  padding: 10rpx 20rpx;
  margin: 6rpx 6rpx 6rpx 0;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.tag.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: scale(1.02);
  border-color: transparent;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.tag:active {
  transform: scale(0.95);
}

/* 头像/图标系统 */
.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 500;
  font-size: 26rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

/* 主题特定头像样式 */
.ocean-theme .avatar {
  background: linear-gradient(135deg, #0891b2 0%, #3b82f6 100%);
}

.forest-theme .avatar {
  background: linear-gradient(135deg, #059669 0%, #10b981 100%);
}

.sunset-theme .avatar {
  background: linear-gradient(135deg, #c084fc 0%, #e879f9 100%);
}

.icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 状态指示器 */
.badge {
  background: #e74c3c;
  color: white;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  text-align: center;
}

.badge.success {
  background: #2ecc71;
}

.badge.warning {
  background: #f39c12;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #ecf0f1, transparent);
  margin: 32rpx 0;
}

/* 空状态 */
.empty-state {
  min-height: calc(100vh - 300rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 80rpx 40rpx 160rpx;
  position: relative;
  background: linear-gradient(180deg,
    rgba(255, 106, 166, 0.03) 0%,
    rgba(253, 186, 116, 0.02) 25%,
    rgba(154, 230, 180, 0.02) 50%,
    rgba(99, 179, 237, 0.03) 75%,
    rgba(217, 70, 239, 0.03) 100%);
}

.empty-state::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(circle at 20% 30%, rgba(255, 106, 166, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(253, 186, 116, 0.06) 0%, transparent 50%),
    radial-gradient(circle at 60% 20%, rgba(154, 230, 180, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 30% 80%, rgba(99, 179, 237, 0.07) 0%, transparent 50%);
  pointer-events: none;
  animation: backgroundFloat 8s ease-in-out infinite;
}

@keyframes backgroundFloat {
  0%, 100% {
    opacity: 0.6;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
}

.empty-content {
  position: relative;
  z-index: 1;
  max-width: 500rpx;
}

.empty-icon {
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto 32rpx;
  background: linear-gradient(135deg,
    #ff6ba6 0%,
    #fdba74 25%,
    #9ae6b4 50%,
    #63b3ed 75%,
    #d946ef 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  box-shadow:
    0 16rpx 48rpx rgba(255, 106, 166, 0.25),
    0 8rpx 24rpx rgba(253, 186, 116, 0.15),
    0 4rpx 12rpx rgba(0, 0, 0, 0.08),
    0 2rpx 0 rgba(255, 255, 255, 0.9) inset;
  animation: floatIcon 4s ease-in-out infinite;
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

.empty-icon::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.3) 50%,
    transparent 70%);
  animation: iconShine 3s ease-in-out infinite;
}

@keyframes floatIcon {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes iconShine {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.empty-title {
  font-size: 44rpx;
  font-weight: 700;
  background: linear-gradient(135deg,
    #ff6ba6 0%,
    #fdba74 25%,
    #9ae6b4 50%,
    #63b3ed 75%,
    #d946ef 100%);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  -webkit-text-fill-color: transparent;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(255, 106, 166, 0.15);
}

.empty-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 60rpx;
  line-height: 1.8;
  opacity: 0.8;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.empty-state .btn {
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 36rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  box-shadow: 0 6rpx 28rpx rgba(102, 126, 234, 0.4),
              0 0 0 0 rgba(102, 126, 234, 0.2);
  transform: translateY(0) scale(1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20rpx);
  min-width: 180rpx;
  max-width: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.empty-state .btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0.1) 50%, 
    rgba(255, 255, 255, 0.05) 100%);
  border-radius: inherit;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.empty-state .btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.4s ease, height 0.4s ease;
}

.empty-state .btn:hover::before {
  opacity: 1;
}

.empty-state .btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 3rpx 14rpx rgba(102, 126, 234, 0.3),
              0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.empty-state .btn:active::after {
  width: 400rpx;
  height: 400rpx;
}

.empty-state .btn .icon {
  margin-right: 12rpx;
  font-size: 28rpx;
  opacity: 0.9;
  transform: translateY(-2rpx);
}

/* 新增按钮的微动画 */
.empty-state .btn {
  animation: buttonPulse 2s ease-in-out infinite;
}

@keyframes buttonPulse {
  0%, 100% {
    box-shadow: 0 6rpx 28rpx rgba(102, 126, 234, 0.4),
                0 0 0 0 rgba(102, 126, 234, 0.2);
  }
  50% {
    box-shadow: 0 6rpx 28rpx rgba(102, 126, 234, 0.4),
                0 0 0 10rpx rgba(102, 126, 234, 0.1);
  }
}

/* 手势按钮设计 */
.gesture-button {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateY(0) scale(1);
}

.gesture-hand {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg,
    #ff6ba6 0%,
    #fdba74 25%,
    #9ae6b4 50%,
    #63b3ed 75%,
    #d946ef 100%);
  border-radius: 40rpx;
  padding: 28rpx 44rpx;
  box-shadow:
    0 12rpx 48rpx rgba(255, 106, 166, 0.25),
    0 6rpx 24rpx rgba(253, 186, 116, 0.15),
    0 3rpx 12rpx rgba(0, 0, 0, 0.08),
    0 2rpx 0 rgba(255, 255, 255, 0.9) inset;
  transform: translateY(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(25rpx);
  -webkit-backdrop-filter: blur(25rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

.hand-emoji {
  font-size: 48rpx;
  animation: pointAnimation 1.5s ease-in-out infinite;
  margin-bottom: 8rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.gesture-text {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 1rpx;
}

/* 手指点击动画 */
@keyframes pointAnimation {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  30% {
    transform: translateY(-8rpx) scale(1.1);
  }
  60% {
    transform: translateY(-4rpx) scale(1.05);
  }
}

/* 闪烁特效 */
.gesture-sparkles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.sparkle {
  position: absolute;
  font-size: 24rpx;
  opacity: 0;
  animation: sparkleAnimation 2s ease-in-out infinite;
}

.sparkle-1 {
  top: 20%;
  left: 15%;
  animation-delay: 0s;
}

.sparkle-2 {
  top: 30%;
  right: 10%;
  animation-delay: 0.7s;
}

.sparkle-3 {
  bottom: 25%;
  left: 20%;
  animation-delay: 1.4s;
}

@keyframes sparkleAnimation {
  0%, 100% {
    opacity: 0;
    transform: translateY(0) rotate(0deg) scale(0.8);
  }
  50% {
    opacity: 1;
    transform: translateY(-20rpx) rotate(180deg) scale(1.2);
  }
}

/* 交互状态 */
.gesture-button:active {
  transform: translateY(4rpx) scale(0.95);
}

.gesture-button:active .gesture-hand {
  transform: translateY(-2rpx);
  box-shadow:
    0 8rpx 32rpx rgba(255, 106, 166, 0.3),
    0 4rpx 16rpx rgba(253, 186, 116, 0.2),
    0 2rpx 0 rgba(255, 255, 255, 0.9) inset;
}

.gesture-button:active .hand-emoji {
  animation-duration: 0.3s;
  transform: translateY(-4rpx) scale(0.9);
}

/* 悬停效果 */
.gesture-button:hover .gesture-hand {
  transform: translateY(-4rpx);
  box-shadow:
    0 16rpx 56rpx rgba(255, 106, 166, 0.3),
    0 8rpx 28rpx rgba(253, 186, 116, 0.2),
    0 4rpx 14rpx rgba(0, 0, 0, 0.1),
    0 2rpx 0 rgba(255, 255, 255, 0.95) inset;
}

.gesture-button:hover .sparkle {
  animation-duration: 1s;
}

/* 光晕效果 */
.gesture-hand::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(45deg,
    rgba(255, 106, 166, 0.6) 0%,
    rgba(253, 186, 116, 0.5) 20%,
    rgba(154, 230, 180, 0.4) 40%,
    rgba(99, 179, 237, 0.5) 60%,
    rgba(217, 70, 239, 0.6) 80%,
    rgba(255, 106, 166, 0.6) 100%);
  border-radius: 52rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  animation: rotateGlow 3s linear infinite;
  z-index: -1;
}

.gesture-button:hover .gesture-hand::before {
  opacity: 0.7;
}

@keyframes rotateGlow {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

